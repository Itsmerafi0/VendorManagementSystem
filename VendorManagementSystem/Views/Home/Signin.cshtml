
@{
    Layout = "~/Views/Shared/_SignInLayout.cshtml";
}
<main class="k-content">
    <div id="sign-in-page">
        <div id="sign-in-wrapper">
            <div id="logo-wrapper">
                <div id="logo">
                    <img src="~/Images/images/signin-logo.svg">
                </div>
                <div id='banner'>
                    Sign In
                </div>
                <div id="account">
                    Don't have an account? <a href="#" id="signUp">Sign up</a>
                </div>
            </div>
            <div id="inputs-wrapper">
                <form id="login"></form>

            </div>
            <div id="continue-with-wrapper">
                <hr> <span>Or continue with</span><hr>
            </div>
            <div id="social-wrapper">
                <a href="#" class='facebook'>
                    <img src="~/Images/images/facebook.svg">
                </a>
                <a href="#" class='twitter'>
                    <img src="~/Images/images/twitter.svg">
                </a>
                <a href="#" class='reddit'>
                    <img src="~/Images/images/reddit.svg">
                </a>
            </div>
        </div>
        
    </div>
</main>
<script>
    $(document).ready(function () {
        $("#login").kendoForm({
            grid: {
                cols: 1,
                gutter: 5
            },
            buttonsTemplate: "<a href='\\#' id='signIn' class='k-button k-button-md k-button-rectangle k-rounded-md k-button-solid k-button-solid-base'>Sign In</a>",
            formData: {
                Email: "",
                Password: "",
                RememberMe: false
            },
            items: [
                {
                    field: "Email",
                    label: "",
                    attributes: {
                        placeholder: "Email",
                        required: true
                    }
                },
                {
                    field: "Password",
                    label: "",
                    attributes: {
                        type: "password",
                        required: true
                    }
                },
                {
                    field: "RememberMe",
                    label: "Remember Me",
                    attributes: {
                        type: "checkbox"
                    }
                }
            ]
        })
        var previewIcon = kendo.ui.icon({ icon: "eye", type: "svg" });
        $("#Password").parent().append(previewIcon);
        $("#Password").val("somepassword");
        $(".k-svg-i-eye").mousedown(function () {
            $("#Password").attr("type", "text");
        })
        $(".k-svg-i-eye").mouseup(function () {
            $("#Password").attr("type", "password");
        })
        $('#signIn').click(function () {
            location.href = "/Home/Index";
        })
        $('#signUp').click(function () {
            location.href = "/Home/Signup";
        })
    })
</script>

